cte_stabilization_time = 1.000
cte_proto_rev = 1

cte_export_ods= True
cte_export_openpyxl = False
cte_upload_web= False
cte_web_root="http://gatatac.org:5555"

#### Connection configuration

cte_use_socket = True
cte_debug = False

if not(cte_use_socket):
    # Serial connection configuration
    import os
    if (os.name == 'nt'):
        cte_serial_port = 'COM4:'
    else:
        cte_serial_port = '/dev/ttyUSB0'
    if (cte_debug):
        if (os.name == 'nt'):
            cte_serial_port_loopback = 'COM5:'
        else:
            cte_serial_port_loopback = '/dev/ttyUSB1'

else:
    # TCP connection configuration
    import socket
    cte_socket_port = 10001
    if not(cte_debug):
        cte_socket_ip = "192.168.90.105"
    else:
        cte_socket_ip = socket.gethostname()

#### Motor configuration

cte_motor_x = 1
cte_motor_y = 2
cte_motor_comp = 3

cte_motor_x_xport = 22
cte_motor_y_xport = 23
cte_motor_comp_xport = 24

# App configuration

cte_verbose = False
cte_fileprefix = "frame"

#### Camera configuration

cte_use_cvcam = False

if cte_use_cvcam:
    cte_camsource = 0
    cte_framePath = "./00_acquired/"

cte_use_photocam = False

if cte_use_photocam:
    #cte_cameractrl_path = "C:\\Program Files (x86)\\digiCamControl\\"
    cte_cameractrl_path = ""
    cte_cameractrl_command = "CameraControlCmd.exe"
    cte_cameractrl_capturecmd = "/capture"
    cte_cameractrl_filenamecmd = "/filename"
    cte_cameractrl_filename_root = "FoV"

cte_use_gphoto2 = False

if cte_use_gphoto2:
    cte_gphoto2_framePath = "./00_acquired/"
    cte_gphoto2_filename_root = "FoV"

cte_use_motor_x = True
cte_use_motor_y = True
cte_use_motor_comp = True

cte_test_protocol=False

if (cte_test_protocol):
    cte_enable_motors_first = False
    cte_disable_motors_first = True
    cte_reset_motors_first = True
    cte_command_np_flags = True
    cte_wait_for_p = False
    cte_sim_disable_untimely_resp = True
else:
    cte_enable_motors_first = False
    cte_disable_motors_first = False
